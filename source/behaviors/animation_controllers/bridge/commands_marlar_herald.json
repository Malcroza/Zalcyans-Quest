{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.bridge_marlar_herald.execute_commands": {
			"states": {
				"default": {
					"transitions": [
						{
							"execute_command_id_1": "query.skin_id == 1"
						}
					]
				},
				"execute_command_id_1": {
					"transitions": [
						{
							"default": "query.skin_id != 1"
						}
					],
					"on_entry": [
						"/playsound item.shield.block @a ~ ~ ~",
						"@s bridge:remove_command_id_1"
					]
				}
			}
		},
		"controller.animation.bridge_marlar_herald.shield": {
			"states": {
				"default": {
					"transitions": [
						{
							"shield_1": "(query.property('zalcyan:equip_custom_shield') == true) && math.random_integer(1,4)==1"
						},
						{
							"shield_2": "(query.property('zalcyan:equip_custom_shield') == true) && math.random_integer(1,4)==2"
						},
						{
							"shield_3": "(query.property('zalcyan:equip_custom_shield') == true) && math.random_integer(1,4)==3"
						},
						{
							"no_shield": "(query.property('zalcyan:equip_custom_shield') == true) && math.random_integer(1,4)==4"
						}
					]
				},
				"shield_1": {
					"transitions": [
						{
							"default": "(query.property('zalcyan:equip_custom_shield') == false)"
						}
					],
					"on_entry": [
						"/structure load marlar_herald_shield1 ~ ~ ~",
						"@s zalcyan:complete_sheild_summon"
					]
				},
				"shield_2": {
					"transitions": [
						{
							"default": "(query.property('zalcyan:equip_custom_shield') == false)"
						}
					],
					"on_entry": [
						"/structure load marlar_herald_shield2 ~ ~ ~",
						"@s zalcyan:complete_sheild_summon"
					]
				},
				"shield_3": {
					"transitions": [
						{
							"default": "(query.property('zalcyan:equip_custom_shield') == false)"
						}
					],
					"on_entry": [
						"/structure load marlar_herald_shield3 ~ ~ ~",
						"@s zalcyan:complete_sheild_summon"
					]
				},
				"no_shield": {
					"transitions": [
						{
							"default": "(query.property('zalcyan:equip_custom_shield') == false)"
						}
					],
					"on_entry": [
						"@s zalcyan:complete_sheild_summon"
					]
				}
			}
		}
	}
}