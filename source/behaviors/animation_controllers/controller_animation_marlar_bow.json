{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.pod.sound": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"sound": "query.has_rider == 1"
						}
					]
				},
				"sound": {
					"animations": [ "pod_sound" ],
					"transitions": [
						{
							"default": "query.has_rider == 0"
						}
					]
				}
			}
		}
	}
}
