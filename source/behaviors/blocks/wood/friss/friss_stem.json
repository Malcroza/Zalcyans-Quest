{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:friss_stem",
            "states": {
                "custom:texture": [
                    0,
                    1
                ],
                "custom:facing_direction": [
                    0,
                    1,
                    2
                ]
            },
            "menu_category": {
                "category": "nature",
                "group": "itemGroup.name.log"
            }
        },
        "permutations": [
            {
                "condition": "q.block_state('custom:facing_direction') == 0",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('custom:facing_direction') == 1",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('custom:facing_direction') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            90
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('custom:texture') == 1",
                "components": {
                    "minecraft:loot": "loot_tables/blocks/friss/friss_stem_stripped.json",
                    "minecraft:material_instances": {
                        "up": {
                            "texture": "friss_stem_stripped_top",
                            "render_method": "opaque"
                        },
                        "down": {
                            "texture": "friss_stem_stripped_top",
                            "render_method": "opaque"
                        },
                        "side": {
                            "texture": "friss_stem_stripped_side",
                            "render_method": "opaque"
                        },
                        "north": "side",
                        "south": "side",
                        "west": "side",
                        "east": "side"
                    }
                }
            }
        ],
        "components": {
            "minecraft:flammable": {
                "catch_chance_modifier": 30,
                "destroy_chance_modifier": 35
            },
            "minecraft:map_color": "#0a33ab",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 1
            },
            "minecraft:material_instances": {
                "up": {
                    "texture": "friss_stem_top",
                    "render_method": "opaque"
                },
                "down": {
                    "texture": "friss_stem_top",
                    "render_method": "opaque"
                },
                "side": {
                    "texture": "friss_stem",
                    "render_method": "opaque"
                },
                "north": "side",
                "south": "side",
                "west": "side",
                "east": "side"
            },
            "minecraft:loot": "loot_tables/blocks/friss/friss_stem.json",
            "minecraft:on_interact": {
                "condition": "q.get_equipped_item_name=='wooden_axe' || q.get_equipped_item_name=='stone_axe' || q.get_equipped_item_name=='golden_axe' || q.get_equipped_item_name=='iron_axe' || q.get_equipped_item_name=='diamond_axe' || q.get_equipped_item_name=='netherite_axe'",
                "event": "texture_stripped"
            },
            "minecraft:on_player_placing": {
                "event": "orientation"
            }
        },
        "events": {
            "orientation": {
                "set_block_state": {
                    "custom:facing_direction": "math.floor(query.cardinal_block_face_placed_on / 2.0)"
                }
            },
            "texture_stripped": {
                "set_block_state": {
                    "custom:texture": 1
                }
            }
        }
    }
}