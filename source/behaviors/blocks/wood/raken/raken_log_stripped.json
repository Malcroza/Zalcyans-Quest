{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:raken_log_stripped",
            "states": {
                "custom:facing_direction": [
                    0,
                    1,
                    2
                ]
            },
            "menu_category": {
                "category": "nature",
                "group": "itemGroup.name.log"
            }
        },
        "permutations": [
            {
                "condition": "q.block_state('custom:facing_direction') == 0",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('custom:facing_direction') == 1",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('custom:facing_direction') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            90
                        ]
                    }
                }
            }
        ],
        "components": {
            "minecraft:flammable": {
                "catch_chance_modifier": 5,
                "destroy_chance_modifier": 5
            },
            "minecraft:map_color": "#d99774",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 1
            },
            "minecraft:material_instances": {
                "up": {
                    "texture": "raken_log_stripped_top",
                    "render_method": "opaque"
                },
                "down": {
                    "texture": "raken_log_stripped_top",
                    "render_method": "opaque"
                },
                "side": {
                    "texture": "raken_log_stripped_side",
                    "render_method": "opaque"
                },
                "north": "side",
                "south": "side",
                "west": "side",
                "east": "side"
            },
            "minecraft:loot": "loot_tables/blocks/raken/raken_log_stripped.json",
            "minecraft:on_player_placing": {
                "event": "orientation"
            }
        },
        "events": {
            "orientation": {
                "set_block_state": {
                    "custom:facing_direction": "math.floor(query.cardinal_block_face_placed_on / 2.0)"
                }
            }
        }
    }
}