{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:lor_slab",
            "states": {
                "zalcyan:flipped": [
                    false,
                    true
                ],
                "zalcyan:cardinal": [
                    2,
                    3,
                    4,
                    5
                ]
            },
            "menu_category": {
                "category": "construction",
                "group": "itemGroup.name.slab"
            }
        },
        "components": {
            "minecraft:light_dampening": 0,
            "minecraft:light_emission": 0,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.2
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 1
            },
            "minecraft:friction": 0.4,
            "minecraft:map_color": "#450010",
            "minecraft:geometry": "geometry.slab",
            "minecraft:collision_box": {
                "origin": [
                    -8,
                    0,
                    -8
                ],
                "size": [
                    16,
                    8,
                    16
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -8,
                    0,
                    -8
                ],
                "size": [
                    16,
                    16,
                    16
                ]
            },
            "minecraft:flammable": {
                "catch_chance_modifier": 30,
                "destroy_chance_modifier": 5
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "lor_log_planks",
                    "render_method": "opaque"
                }
            },
            "minecraft:on_player_placing": {
                "event": "zalcyan:ground",
                "target": "self"
            },
            "minecraft:on_interact": {
                "condition": "q.get_equipped_item_name=='lor_slab'",
                "event": "double_slab_block"
            },
            "minecraft:loot": "loot_tables/blocks/lor/lor_slab.json",
            "minecraft:transformation": {
                "rotation": [
                    0,
                    0,
                    0
                ]
            }
        },
        "permutations": [
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 3",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 3",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            90,
                            0
                        ]
                    }
                }
            }
        ],
        "events": {
            "zalcyan:ground": {
                "sequence": [
                    {
                        "set_block_state": {
                            "zalcyan:flipped": "query.cardinal_player_facing == 1 || query.block_face == 0"
                        }
                    },
                    {
                        "set_block_state": {
                            "zalcyan:cardinal": "query.cardinal_facing_2d"
                        }
                    }
                ]
            },
            "double_slab_block": {
                "sequence": [
                    {
                        "decrement_stack": {}
                    },
                    {
                        "run_command": {
                            "command": [
                                "setblock ~ ~ ~ zalcyan:lor_double_slab"
                            ]
                        }
                    },
                    {
                        "run_command": {
                            "command": [
                                "playsound use.wood @a[r=5] ~ ~ ~ 0.4 1.0"
                            ]
                        }
                    }
                ]
            }
        }
    }
}