{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:sappis_seap_block",
            "is_experimental": false,
            "register_to_creative_menu": true,
            "menu_category": {
                "category": "nature"
            }
        },
        "components": {
            "minecraft:on_step_on": {
                "event": "aura_particle"
            },
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.3
            },
            "minecraft:friction": 0.3,
            "minecraft:map_color": "#45563e",
            "minecraft:light_dampening": 0.0,
            "minecraft:light_emission": 0.0,
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 1.0
            },
			"minecraft:on_placed": {
                "event": "place",
                "target": "self"
            },
            "minecraft:on_player_destroyed": {
                "event": "break",
                "target": "self"
            }
        },
        "events": {
            "aura_particle": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "particle zalcyan:sappis_bubble ~ ~+0.51 ~"
                            ]
                        }
                    }
                ]
            },
			"break": {
                "run_command": {
                    "command": [
                        "fill ~ ~+1 ~ ~ ~+1 ~ air replace zalcyan:sappis_seap"
                    ]
                }
            },
            "place": {
                "run_command": {
                    "command": [
                        "fill ~ ~+1 ~ ~ ~+1 ~ zalcyan:sappis_seap replace air"
                    ]
                }
            }
        }
    }
}