{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:orb_light",
			"is_experimental": false,
            "register_to_creative_menu": true,
            "menu_category": {
                "category": "construction"
            },
            "states": {
                "zalcyan:rotate": [
                    0,
					1,	
					2,
                    3,
                    4,
                    5,
					6
                ]
            }
        },
        "components": {
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.4
            },
            "minecraft:friction": 0.4,
            "minecraft:light_emission": 15,
            "minecraft:light_dampening": 0,
            "minecraft:collision_box": false,
            "minecraft:selection_box": {
               "origin": [
                    -7,
                    0,
                    -7
                ],
                "size": [
                    14,
                    16,
                    14
                ]
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "orb_light",
                    "render_method": "blend"
                }
            },
            "minecraft:geometry": "geometry.orb_light",
            "minecraft:map_color": "#EE61F3",
            "minecraft:on_player_placing": {
                "event": "zalcyan:ground",
                "target": "self"
            }
        },
        "permutations": [
			{
                "condition": "q.block_state('zalcyan:rotate') == 0",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            0,
                            0
                        ]
                    }
                }
            },
			{
                "condition": "q.block_state('zalcyan:rotate') == 1",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },			
			{
                "condition": "q.block_state('zalcyan:rotate') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') ==3",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') == 6",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            }
        ],
        "events": {
            "zalcyan:ground": {
                "sequence": [
                    {
                        "set_block_state": {
                            "zalcyan:rotate": "query.block_face"
                        }
                    }
                ]
            }
        }
    }
}