{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:ds_loot_box1",
            "states": {
                "zalcyan:flipped": [
                    false,
                    true
                ],
                "zalcyan:cardinal": [
                    2,
                    3,
                    4,
                    5
                ],
                "zalcyan:open": [
                    false,
                    true
                ]
            },
            "menu_category": {
                "category": "construction"
            }
        },
        "components": {
            "minecraft:light_dampening": 0,
            "minecraft:light_emission": 0,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.2
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 1
            },
            "minecraft:friction": 0.4,
            "minecraft:map_color": "#a4aed3",
            "minecraft:geometry": "geometry.ds_loot_box1",
            "minecraft:collision_box": {
                "origin": [
                    -5,
                    0,
                    -5
                ],
                "size": [
                    10,
                    10,
                    10
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -5,
                    0,
                    -5
                ],
                "size": [
                    10,
                    10,
                    10
                ]
            },
            "minecraft:flammable": {
                "catch_chance_modifier": 30,
                "destroy_chance_modifier": 5
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "ds_loot_box1",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:on_player_placing": {
                "event": "zalcyan:ground",
                "target": "self"
            },
            "minecraft:transformation": {
                "rotation": [
                    0,
                    0,
                    0
                ]
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "up"
                        ]
                    }
                ]
            },
            "minecraft:on_interact": {
                "event": "open",
                "target": "self"
            }
        },
        "permutations": [
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 3",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == false && q.block_state('zalcyan:cardinal') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 3",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:flipped') == true && q.block_state('zalcyan:cardinal') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:open') == 0",
                "components": {
                    "minecraft:geometry": "geometry.ds_loot_box1",
                    "minecraft:light_emission": 0,
                    "minecraft:collision_box": {
                        "origin": [
                            -5,
                            0,
                            -5
                        ],
                        "size": [
                            10,
                            10,
                            10
                        ]
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -5,
                            0,
                            -5
                        ],
                        "size": [
                            10,
                            10,
                            10
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:open') == 1",
                "components": {
                    "minecraft:geometry": "geometry.ds_loot_box1_open",
                    "minecraft:light_emission": 7,
                    "minecraft:collision_box": {
                        "origin": [
                            -5,
                            0,
                            -5
                        ],
                        "size": [
                            10,
                            16,
                            10
                        ]
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -5,
                            0,
                            -5
                        ],
                        "size": [
                            10,
                            16,
                            10
                        ]
                    },
					"minecraft:loot": "loot_tables/nothing.json"
                }
            }
        ],
        "events": {
            "zalcyan:ground": {
                "sequence": [
                    {
                        "set_block_state": {
                            "zalcyan:flipped": "query.cardinal_player_facing == 1 || query.block_face == 0"
                        }
                    },
                    {
                        "set_block_state": {
                            "zalcyan:cardinal": "query.cardinal_facing_2d"
                        }
                    }
                ]
            },
            "open": {
                "sequence": [
                    {
                        "sequence": [
                            {
                                "condition": "q.block_state('zalcyan:open') == false",
                                "run_command": {
                                    "command": [
                                        "particle zalcyan:treasure_ray ~~~"
                                    ],
                                    "target": "self"
                                }
                            },
							{
                                "condition": "q.block_state('zalcyan:open') == false",
                                "run_command": {
                                    "command": [
                                        "playsound random.chestopen @p ~ ~ ~"
                                    ],
                                    "target": "self"
                                }
                            },
                            {
                                "condition": "q.block_state('zalcyan:open') == false",
                                "spawn_loot": {
								"table": "loot_tables/blocks/ds_loot_box1_loot.json"
								}
                            },
                            {
                                "condition": "q.block_state('zalcyan:open') == false",
                                "set_block_state": {
                                    "zalcyan:open": true
                                }
                            }
                        ]
                    }//,
                    //{
                    //    "sequence": [
                    //        {
                    //            "condition": "q.block_state('zalcyan:open') == true",
                    //            "set_block_state": {
                    //                "zalcyan:open": false
                    //            }
                    //        }
                    //    ]
                    //}
                ]
            }
        }
    }
}