{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:ds_decoration8",
            "states": {
				"zalcyan:flipped": [
                    false,
                    true
                ],
                "zalcyan:rotate": [
                    0,
                    1,
                    2,
                    3,
                    4,
                    5,
                    6
                ]
            },
            "menu_category": {
                "category": "construction"
            }
        },
        "components": {
            "minecraft:light_dampening": 4,
            "minecraft:light_emission": 0,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.2
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 1
            },
            "minecraft:friction": 0.4,
            "minecraft:map_color": "#ff3c6a",
            "minecraft:geometry": "geometry.ds_decoration8",
            "minecraft:collision_box": {
                "origin": [
                    -3,
                    0,
                    -3
                ],
                "size": [
                    6,
                    13,
                    6
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -3,
                    0,
                    -3
                ],
                "size": [
                    6,
                    13,
                    6
                ]
            },
            "minecraft:flammable": {
                "catch_chance_modifier": 30,
                "destroy_chance_modifier": 5
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "ds_decoration8",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:on_player_placing": {
                "event": "zalcyan:ground",
                "target": "self"
            },
            "minecraft:transformation": {
                "rotation": [
                    0,
                    0,
                    0
                ]
            },
            "minecraft:on_interact": {
                "event": "zalcyan:zap",
                "target": "self"
            },
            "minecraft:on_step_on": {
                "event": "zalcyan:zap"
            }
        },
        "permutations": [
            {
                "condition": "q.block_state('zalcyan:rotate') == 1",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            270,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') ==3",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            -90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('zalcyan:rotate') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            90,
                            0
                        ]
                    }
                }
            },
			{
                "condition": "q.block_state('zalcyan:flipped') == true",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            0,
                            0
                        ]
                    }
                }
            }
        ],
        "events": {
            "zalcyan:ground": {
                "sequence": [
                    {
                        "set_block_state": {
                            "zalcyan:rotate": "query.block_face"
                        }
                    },
					{
                        "set_block_state": {
                            "zalcyan:flipped": "query.cardinal_player_facing == 1 || query.block_face == 0"
                        }
                    }
                ]
            },
			"zalcyan:zap": {
                "sequence": [
                    {
                        "damage":{
							"amount":10,
							"target": "other",
							"type":"contact"
							}
                    },
                    {
                         "run_command": {
                            "command": [
                                "particle zalcyan:r_orb_sparks ~ ~+0.31 ~"
                            ]
                        }
                    },
                    {
                        "run_command": {
                            "command": [
								"playsound sound.laser.hit @a ~ ~ ~"
                            ]
                        }
                    }
                ]
            }
        }
    }
}