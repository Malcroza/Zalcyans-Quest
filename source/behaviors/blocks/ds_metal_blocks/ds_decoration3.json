{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:ds_decoration3",
            "states": {
                "zalcyan:flipped": [
                    false,
                    true
                ],
                "zalcyan:cardinal": [
                    2,
                    3,
                    4,
                    5
                ]
            },
            "menu_category": {
                "category": "construction"
            }
        },
        "components": {
            "minecraft:light_dampening": 4,
            "minecraft:light_emission": 0,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.2
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 1
            },
            "minecraft:friction": 0.4,
            "minecraft:map_color": "#172434",
            "minecraft:geometry": "geometry.ds_decoration3",
            "minecraft:collision_box": {
                "origin": [
                    -4,
                    0,
                    -4
                ],
                "size": [
                    8,
                    16,
                    8
                ]
            },
