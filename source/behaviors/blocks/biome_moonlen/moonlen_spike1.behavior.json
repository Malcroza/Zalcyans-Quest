{
    "format_version": "1.20.20",
    "minecraft:block": {
        "description": {
            "identifier": "zalcyan:moonlen_spike1",
            "states": {
                "zalcyan:rotate": [
                    0,
                    1,
                    2,
                    3,
                    4,
                    5,
                    6
                ]
            }
        },
        "components": {
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 4
            },
            "minecraft:friction": 0.4,
            "minecraft:light_emission": 0,
            "minecraft:light_dampening": 0,
            "minecraft:collision_box": false,
            "minecraft:selection_box": {
                "origin": [
                    -5.65,
                    0,
                    -5.65
                ],
                "size": [
                    11.3,
                    16,
                    11.3
                ]
            },
            "minecraft:material_instances": {
                "*": {
                    "texture": "moonlen_spike_tall1",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:geometry": "geometry.two_cross_tall_forty_five",
            "minecraft:map_color": "#1e2333",
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "block_filter": [
                            "zalcyan:moonlen_stone",
                            "zalcyan:moonlen_spike_body"
                        ],
                        "allowed_faces": [
                            "down",
                            "up"
                        ]
                    }
                ]
            },
            "minecraft:on_placed": {
                "event": "zalcyan:ground",
                "target": "self"
            },
            "minecraft:on_player_placing": {
                "event": "zalcyan:ground",
                "target": "self"
            },
            "minecraft:on_player_destroyed": {
                "event": "broken",
                "target": "self"
            },
            "minecraft:on_interact": {
                "event": "grow",
                "condition": "query.get_equipped_item_name('main_hand') == 'zalcyan:moonlen_spike_item'"
            },
            "minecraft:loot": "loot_tables/items/moonlen_spike_item.json"
        },
        "permutations": [
            {
                "condition": "q.block_state('zalcyan:rotate') == 0",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            180,
                            0,
                            0
                        ]
                    }
                }
            }
        ],
        "events": {
            "zalcyan:ground": {
                "sequence": [
                    {
                        "set_block_state": {
                            "zalcyan:rotate": "query.block_face"
                        }
                    }
                ]
            },
            "broken": {
                "run_command": {
                    "command": [
                        "fill ~ ~+1 ~ ~ ~+1 ~ zalcyan:moonlen_spike1 replace zalcyan:moonlen_spike_body",
                        "fill ~ ~-1 ~ ~ ~-1 ~ zalcyan:moonlen_spike1 replace zalcyan:moonlen_spike_body"
                    ]
                }
            },
            "grow": {
                "sequence": [
                    {
                        "sequence": [
                            {
                                "set_block_at_pos": {
                                    "block_type": "zalcyan:moonlen_spike_body",
                                    "block_offset": [
                                        0,
                                        0,
                                        0
                                    ]
                                }
                            },
                            {
                                "set_block_at_pos": {
                                    "block_type": "zalcyan:moonlen_spike_tip",
                                    "block_offset": [
                                        0,
                                        -1,
                                        0
                                    ]
                                }
                            }
                        ]
                    },
                    {
                        "decrement_stack": {}
                    },
                    {
                        "run_command": {
                            "command": [
                                "particle minecraft:endrod ~ ~ ~"
                            ]
                        }
                    },
                    {
                        "run_command": {
                            "command": [
                                "playsound item.bone_meal.use @a ~ ~ ~"
                            ]
                        }
                    }
                ]
            }
        }
    }
}