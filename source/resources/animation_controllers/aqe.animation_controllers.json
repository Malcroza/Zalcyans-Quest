//bridge-file-version: #2
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.aqe.nap": {
			"states": {
				"default": {
					"animations": [
						"look_at_target",
						"idle"
					],
					"transitions" : [
						{
							"sleep" : "query.is_sleeping"
						},
						{
							"target" : "query.has_target"
						}
					],
					"blend_transition": 0.1
				},
				"inter": {
					"animations": [
						"stand",
						"idle"
					],
					"transitions" : [
						{
							"default" : "query.all_animations_finished"
						}
					],
					"blend_transition": 0.1
				},
				"sleep": {
					"animations": [
						"sit",
						"idle"
					],
					"transitions" : [
						{
							"inter" : "!query.is_sleeping"
						}
					],
					"blend_transition": 0.1
				},
				"target": {
					"animations": [
						"has_target",
						"idle",
						"look_at_target"
					],
					"transitions" : [
						{
							"default" : "!query.has_target"
						},
						{
							"sleep" : "query.is_sleeping"
						}
					],
					"blend_transition": 0.2
				}
			}
		},
		"controller.animation.aqe.move": {
			"states": {
				"default": {
					"transitions" : [
						{
							"walking" : "query.modified_move_speed > 0.05 && query.modified_move_speed < 0.4"
						},
						{
							"running" : "query.modified_move_speed >= 0.4"
						},
						{
							"crouching" : "query.modified_move_speed < 0.05 && query.facing_target_to_range_attack == 1"
						}
					],
					"blend_transition": 0.2
				},
				"walking" : {
					"animations" : [ "walk" ],
					"transitions" : [
						{
							"default" : "query.modified_move_speed <= 0.05"
						},
						{
							"running" : "query.modified_move_speed >= 0.4"
						},
						{
							"crouching" : "query.modified_move_speed < 0.05 && query.facing_target_to_range_attack == 1"
						}
					],
					"blend_transition": 0.2
				},
				"running" : {
					"animations" : [ "run" ],
					"transitions" : [
						{
							"default" : "query.modified_move_speed <= 0.05"
						},
						{
							"walking" : "query.modified_move_speed > 0.05 && query.modified_move_speed < 0.4"
						},
						{
							"crouching" : "query.modified_move_speed < 0.05 && query.facing_target_to_range_attack == 1"
						}
					],
					"blend_transition": 0.2
				},
				"crouching" : {
					"animations" : [ "crouch" ],
					"transitions" : [
						{
							"default" : "query.modified_move_speed <= 0.05 && query.facing_target_to_range_attack != 1"
						},
						{
							"walking" : "query.modified_move_speed > 0.05 && query.modified_move_speed < 0.4"
						},
						{
							"running" : "query.modified_move_speed >= 0.4"
						}
					],
					"blend_transition": 0.2
				}
			}
		},
		"controller.animation.aqe.attack": {
			"states": {
				"default": {
					"transitions": [
						{
							"attack0": "math.random_integer(1,5)==1 && query.is_delayed_attacking"
						},
						{
							"attack1": "math.random_integer(1,2)==2 && query.is_delayed_attacking"
						}
					],
					"blend_transition": 0.4
				},
				"attack0": {
					"animations": [
						"attack0"
					],
					"transitions": [
						{
							"default": "query.all_animations_finished"
						}
					],
					"blend_transition": 0.4
				},
				"attack1": {
					"animations": [
						"attack1"
					],
					"transitions": [
						{
							"default": "query.all_animations_finished"
						}
					],
					"blend_transition": 0.4
				}
			}
		}
	}
}