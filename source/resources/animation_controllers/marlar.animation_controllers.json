{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.marlar.default" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"animations" : [ "bob"]
				}
			}
		},
		"controller.animation.marlar.red_dye": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"ridden": "v.health_change < 0"
						}
					]
				},
				"ridden": {
					"particle_effects": [
						{
							"effect": "red_dye"
						}
					],
					"transitions": [
						{
							"default": "query.all_animations_finished"
						}
					]
				}
			}
		},
