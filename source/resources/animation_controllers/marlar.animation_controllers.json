						}
					],
					"blend_transition": 0.2
				},
				"fire" : {
					"animations" : [ "bob", "fire"],
					"transitions" : [
						{
							"default" : "query.all_animations_finished && !query.has_target"
						},
						{
							"melee" : "!query.facing_target_to_range_attack && query.has_target"
						},
						{
							"ranged" : "query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"hold_shield" : "(query.property('zalcyan:shielded') == true) && !query.is_sleeping && query.has_target"
						}
						
					],
					"blend_transition": 0.5
				},
				"hold_shield" : {
					"animations" : [ "bob"],
					"transitions" : [
						{
							"default" : " !query.has_target"
						},
						{
							"ranged" : "query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"fire_draw" : "query.is_charged && query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"melee" : "(query.property('zalcyan:shielded') == false) && !query.facing_target_to_range_attack && query.has_target"
						}
					],
					"blend_transition": 0.3
				}
			}
		},
		"controller.animation.marlar.move": {
			"states": {
				"default": {
					"animations": [
						{
							"moving": "query.modified_move_speed*2"
						},
						{
							"moving_arms": "query.modified_move_speed*1.8"
						},
						"base_arms"
					],
					"transitions" : [
						{
							"sleep" : "query.is_sleeping"
						},
						{
							"stop" : "query.modified_move_speed <= 0.05"
						},
						{
							"melee_arms" : "(query.property('zalcyan:shielded') == false) && query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"ranged_arms" : "(query.property('zalcyan:shielded') == false) && query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"shield_arms" : "(query.property('zalcyan:shielded') == true) && !query.is_sleeping"
						},
						{
							"celebrate" : "query.is_celebrating"
						}
						
					],
					"blend_transition": 0.1
				},
				"inter": {
					"animations": [
						"stand"
					],
					"transitions" : [
						{
							"default" : "query.all_animations_finished && query.modified_move_speed > 0.05"
						},
						{
							"stop" : "query.all_animations_finished && query.modified_move_speed <= 0.05"
						}
					],
					"blend_transition": 0.1
				},
				"sleep": {
					"animations": [
						"sit"
					],
					"transitions" : [
						{
							"inter" : "!query.is_sleeping"
						}
					],
					"blend_transition": 0.1
				},
				"stop": {
					"animations": [
						"base_arms"
					],
					"transitions" : [
						{
							"sleep" : "query.is_sleeping"
						},
						{
							"default": "query.modified_move_speed > 0.05"
						},
						{
							"shield_arms" : "(query.property('zalcyan:shielded') == true) && !query.is_sleeping"
						},
						{
							"ranged_arms" : "(query.property('zalcyan:shielded') == false) && query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"melee_arms" : "(query.property('zalcyan:shielded') == false) && query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"celebrate" : "query.is_celebrating"
						}
						
					],
					"blend_transition": 0.3
				},
				"ranged_arms": {
					"animations": [
						{
							"moving": "query.modified_move_speed*1.8"
						}, "bow_and_arrow"
					],
					"transitions" : [
						{
							"default" : "!query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && query.modified_move_speed > 0.05"
						},
						{
							"stop" : "!query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && query.modified_move_speed <= 0.05"
						},
						{
							"sleep" : "query.is_sleeping"
						},
						{
							"melee_arms" : "(query.property('zalcyan:shielded') == false) && query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"shield_arms" : "(query.property('zalcyan:shielded') == true) && !query.is_sleeping"
						},
						{
							"celebrate" : "query.is_celebrating"
						}
						
					],
					"blend_transition": 0.3
				},
				"melee_arms": {
					"animations": [
						{
							"moving": "query.modified_move_speed*1.8"
						},
						"base_arms"
					],
					"transitions" : [
						{
							"default" : "!query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping"
						},
						{
							"sleep" : "query.is_sleeping"
						},
						{
							"stop" : "query.modified_move_speed <= 0.05"
						},
						{
							"ranged_arms" : "(query.property('zalcyan:shielded') == false) && query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"shield_arms" : "(query.property('zalcyan:shielded') == true) && !query.is_sleeping"
						},
						{
							"celebrate" : "query.is_celebrating"
						}
						
					],
					"blend_transition": 0.1
				},
				"shield_arms": {
					"animations": [
							"shield",
						{
							"moving": "query.modified_move_speed*1.8"
						}
					],
					"transitions" : [
						{
							"default" : "(query.property('zalcyan:shielded') == false) && !query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && !query.has_target && query.modified_move_speed > 0.05"
						},
						{
							"stop" : "(query.property('zalcyan:shielded') == false) && !query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && !query.has_target && query.modified_move_speed <= 0.05"
						},
						{
							"sleep" : "query.is_sleeping"
						},
						{
							"ranged_arms" : "(query.property('zalcyan:shielded') == false) && query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"melee_arms" : "(query.property('zalcyan:shielded') == false) && query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"celebrate" : "query.is_celebrating"
						}
						
					],
					"blend_transition": 0.3
				},
				"celebrate": {
					"animations": [
							"celebrate",
						{
							"moving": "query.modified_move_speed*1.8"
						}
					],
					"transitions" : [
						{
							"default" : "!query.is_celebrating && (query.property('zalcyan:shielded') == false) && !query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && !query.has_target && query.modified_move_speed > 0.05"
						},
						{
							"stop" : "!query.is_celebrating && (query.property('zalcyan:shielded') == false) && !query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && !query.has_target && query.modified_move_speed <= 0.05"
						},
						{
							"sleep" : "query.is_sleeping"
						},
						{
							"ranged_arms" : "(query.property('zalcyan:shielded') == false) && query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"melee_arms" : "(query.property('zalcyan:shielded') == false) && query.is_delayed_attacking && !query.facing_target_to_range_attack && !query.is_sleeping && query.has_target"
						},
						{
							"shield_arms" : "(query.property('zalcyan:shielded') == true) && !query.is_sleeping"
						}
						
					],
					"blend_transition": 0.3
				}
			}
		}
