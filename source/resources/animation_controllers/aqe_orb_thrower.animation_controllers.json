{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.aqe_orb_thrower.attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": ["aqe_orb_thrower_first_person"],
					"transitions": [
						{
							"look1": "c.is_first_person && query.is_item_name_any('slot.weapon.mainhand', 0, 'zalcyan:aqe_orb_thrower') && query.is_sneaking == 1"
						}
					],
					"blend_transition": 0.4
				},
				"look1": {
					"animations": ["aqe_orb_thrower_first_person_crouch"],
					"transitions": [
						{
							"default": "c.is_first_person && query.is_item_name_any('slot.weapon.mainhand', 0, 'zalcyan:aqe_orb_thrower') && query.item_is_charged != 1 && query.is_sneaking != 1"
						}
					],
					"blend_transition": 0.2
				}
			}
		},
		"controller.animation.animation.aqe_orb_thrower.fire": {
			"initial_state" : "hold",
			"states": {
				"hold": {
					"animations": [
					{ "hold": "!query.has_property('zalcyan:gun_spark')" }
					],
					"transitions": [
						{
						"charge": "query.main_hand_item_use_duration > 0.0"
						}
					]
				},
				"charge": {
					"animations": [
						"charge"
						
					],
					"transitions": [
						{
						"fire": "query.all_animations_finished && query.main_hand_item_use_duration <= 0.0 && !query.is_charging"
						},
						{
						"hold": "!query.all_animations_finished && query.main_hand_item_use_duration <= 0.0 && !query.is_charging"
						}
					],
					"blend_transition": 0.2
				},
				"fire": {
					"animations": [
						"fire"
					],
					"transitions": [
						{
						"hold": "query.all_animations_finished"
						}
					]
				}
			}
		},
		"controller.animation.animation.aqe_orb_thrower.cont_entity_fire": {
			"initial_state" : "hold",
			"states": {
				"hold": {
					"animations": [
						"hold"
					],
					"transitions": [
						{
						"charge": "query.is_charged"
						}
					]
				},
				"charge": {
					"animations": [
						"charge"
						
					],
					"transitions": [
						{
						"fire": "!query.is_charged"
						}
					],
					"blend_transition": 0.2
				},
				"fire": {
					"animations": [
						"fire"
					],
					"transitions": [
						{
						"hold": "query.all_animations_finished"
						}
					]
				}
			}
		}
	}
}