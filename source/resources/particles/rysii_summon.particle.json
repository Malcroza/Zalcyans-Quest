{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "zalcyan:rysii_summon",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/explos_glow"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "variable.size = 1.03;variable.lifetime = 2.2;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 130,
				"max_particles": 1000
			},
			"minecraft:emitter_lifetime_expression": {
				"activation_expression": 1
			},
			"minecraft:emitter_shape_point": {
				"offset": [0, 2, 0]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "variable.particle_random_1*variable.lifetime"
			},
			"minecraft:particle_initial_speed": 0.4,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(variable.particle_random_3-0.5)", "(variable.particle_random_3-0.5)", "(variable.particle_random_4-0.5)"],
				"linear_drag_coefficient": 0.2
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["variable.size*(variable.particle_age)", "variable.size*(variable.particle_random_1*variable.lifetime-variable.particle_age)*220*variable.particle_random_2"],
				"facing_camera_mode": "rotate_y",
				"uv": {
					"texture_width": 80,
					"texture_height": 80,
					"uv": [0, 0],
					"uv_size": [80, 80]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.12": "#FF000000",
						"0.3": "#8A1900",
						"0.54": "#FFFF7200",
						"0.66": "#FFFFFFFF"
					}
				}
			}
		}
	}
}